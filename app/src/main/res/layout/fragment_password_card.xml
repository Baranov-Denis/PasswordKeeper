<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PasswordCardFragment"
    android:id="@+id/fragment_container"
    >

    <LinearLayout
        android:id="@+id/password_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--  <EditText
              android:id="@+id/resource_name_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/Enter_resource_name"/>
      -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="false"
            app:fontFamily="@font/roboto_mono_regular">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/resource_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:focusable="true"
                android:hint="@string/Resource_name"
                android:inputType="text"
                android:maxLines="1"
                style="@style/passwordCardStyleMonoSpace"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/login_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:focusable="true"
                android:hint="@string/Login"
                android:inputType="textPassword"
                android:maxLines="1"
                style="@style/passwordCardStyleMonoSpace"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="true"

            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:focusable="true"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:maxLines="1"
                style="@style/passwordCardStyleMonoSpace"/>


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="false">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/note_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:focusable="true"
                android:hint="@string/Note"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="7"
                style="@style/passwordCardStyleMonoSpace"/>


        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/last_changed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/last_changed" />

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp"
                android:text="@string/Date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_button_fp"
                android:layout_height="64dp"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/back_button_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_button_fp"
                android:layout_height="64dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/change_button_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_button_fp"
                android:layout_height="64dp"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/delete_button_text" />


        </LinearLayout>


    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_eye_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_eye_float_green_button"
        app:tint="@color/green"
        app:maxImageSize="50dp"
        app:backgroundTint="@color/white"
        android:visibility="invisible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_leave_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:tint="@color/red"
        android:src="@drawable/ic_leave_float_red_button"
        app:maxImageSize="50dp"
        app:backgroundTint="@color/white"
        android:visibility="invisible"/>
</FrameLayout>