<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SettingsFragment"
    android:background="@drawable/back1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/get_token_button"
                style="@style/ItemTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Get_token" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/enter_token_edit_text_settings_fragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusedByDefault="true"
                android:gravity="center"
                android:hint="@string/enter_token_hint"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/enter_token_button"
                style="@style/ItemTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Enter_token" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/save_password_length_button"
                    style="@style/WhiteText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="@string/Password_length"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    app:passwordToggleEnabled="false"
                    app:fontFamily="@font/roboto_mono_regular"

                    android:hint="@string/Password_length"
                    style="@style/passwordCardStyleMonoSpace">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/enter_password_length_edit_text_settings_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:focusable="true"
                        app:hintEnabled="true"
                        android:text="55"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/passwordCardStyleMonoSpace"/>
                </com.google.android.material.textfield.TextInputLayout>

