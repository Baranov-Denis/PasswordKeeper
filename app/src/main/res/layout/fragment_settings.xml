<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_token_button"
            style="@style/ItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Get_token" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/enter_token_edit_text_settings_fragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusedByDefault="true"
            android:gravity="center"
            android:hint="@string/enter_token_hint"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/enter_token_button"
            style="@style/ItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Enter_token" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="32dp"/>


        <TextView
            style="@style/WhiteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/Password_length" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/enter_password_length_edit_text_settings_fragment"
            style="@style/WhiteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusedByDefault="true"
            android:gravity="center"
            android:hint="@string/Password_length"
            android:maxLines="1"
            android:textSize="25sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_password_length_button"
            style="@style/ItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Save_password_length" />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="32dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_and_send_database_button"
            style="@style/ItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Save_and_send_database" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/load_external_database_button"
            style="@style/ItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Load_database" />

    </LinearLayout>

</FrameLayout>