            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/white" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_and_send_database_button"
                style="@style/ItemTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Save_and_send_database" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/load_external_database_button"
                style="@style/ItemTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Load_database" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_main_password_button"
                style="@style/ItemTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_main_password" />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/deep_blue"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_from_settings_button"
            style="@style/ItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="4dp"
            android:text="@string/Back" />
