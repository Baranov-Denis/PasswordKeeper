<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.HotKeyButtonsFragment"
    android:id="@+id/hot_keys_fragment"
    >


    <!--
    Расстояние между fab 10
    -->


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:id="@+id/fragment_password_list"
    android:tag="my_fragment_tag"
    >


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/password_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".PasswordListFragment"
                >
            </androidx.recyclerview.widget.RecyclerView>




</LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="365dp"
        android:layout_marginEnd="16dp"
        app:maxImageSize="60dp"
        android:src="@drawable/escape"
        app:tint="@null"
        app:backgroundTint="@null"
        android:visibility="invisible"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_load_backup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="295dp"
        android:layout_marginEnd="16dp"
        app:maxImageSize="60dp"
        android:src="@mipmap/fab_icon_load"
        app:tint="@null"
        app:backgroundTint="@null"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="225dp"
        android:layout_marginEnd="16dp"
        app:maxImageSize="60dp"
        android:src="@mipmap/fab_icon_settings"
        app:tint="@null"
        app:backgroundTint="@null"
        android:visibility="invisible"
        />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save_passwords_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="155dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/fab_icon_save"
        app:tint="@null"
        app:backgroundTint="@null"
        app:maxImageSize="60dp"
        android:visibility="invisible"
       />
    <!-- android:visibility="invisible"-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/fab_icon_plus"
        app:tint="@null"
        app:backgroundTint="@null"
        app:maxImageSize="60dp"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_leave_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        app:maxImageSize="60dp"
        android:src="@mipmap/fab_icon_leave"
        app:tint="@null"
        app:backgroundTint="@null"
        android:visibility="invisible"/>
</FrameLayout>
