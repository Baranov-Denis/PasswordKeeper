<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HotKeysForCardFragment"
    android:id="@+id/hot_keys_fragment"
    >





<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="80dp"
    android:layout_marginEnd="16dp"
    android:layout_gravity="bottom|end">

    <ImageButton
        android:id="@+id/show_image_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:src="@drawable/icons8_eye_closed_100"
        android:background="@null"
        android:visibility="visible" />


    <ImageButton
        android:id="@+id/leave_image_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:src="@drawable/icons8_advance_100"
        android:background="@null"
        android:visibility="visible" />
</LinearLayout>


</FrameLayout>