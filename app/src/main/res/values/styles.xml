<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemTheme">
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">1dp</item>

    </style>


    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="passwordCardStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="passwordCardStyleMonoSpace">
        <item name="android:fontFamily">@font/roboto_mono_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>